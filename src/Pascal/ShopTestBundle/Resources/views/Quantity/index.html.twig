{% extends '::base.html.twig' %}

{% block body -%}

    <h1>Quantity list</h1>

<div class = "mainContainer">

    <ul>
        <li>
            <a href="{{ path('quantity_new') }}">
                Create a new entry
            </a>
        </li>
        {% if is_granted("ROLE_ADMIN") %}
            <li>
                <a href = "{{ path('product_viewAdmin') }}">Admin View</a>
            </li>
        {% endif %}
    </ul>


        <table class="table table-striped table-hover table-condensed table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('quantity_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.quantity }}</td>
                    <td>
                        <ul class = "list-inline">
                            <li>
                                <a href="{{ path('quantity_show', { 'id': entity.id }) }}">Show</a>
                            </li>
                            <li>
                                --
                            </li>
                            <li>
                                <a href="{{ path('quantity_edit', { 'id': entity.id }) }}">Edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

</div> <!-- End mainContainer -->

    {% endblock %}
