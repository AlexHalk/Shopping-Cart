{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td> <a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a> </td>
                <td> {{ entity.username }} </td>
                <td> <a href="{{ path('user_show', { 'id': entity.id }) }}">Show</a> </td>
                <td> <a href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <strong> <a href="{{ path('user_new') }}"> Create a new entry </a> </strong>
        </li>
        {% if is_granted("ROLE_ADMIN") %}
            <li>
                 <strong> <a href = "{{ path('product_viewAdmin') }}">Admin View</a> </strong>
            </li>
        {% endif %}
    </ul>

    {% endblock %}
