{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserCart list</h1>

    <ul>
        <li>
            <a href="{{ path('usercart_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href = "{{ path('product_viewAdmin') }}">
                Admin View
            </a>
        </li>
    </ul>

    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Submitted</th>
                <th>Show Cart</th>
                <th>Edit Cart</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td> <a href="{{ path('usercart_show', { 'id': entity.id }) }}">{{ entity.id }}</a> </td>
                <td> 
                    {% if entity.submitted == '1' %}
                        YES
                    {% else %}
                        <strong> NO </strong>
                    {% endif %} 
                </td>
                <td> <a href="{{ path('usercart_show', { 'id': entity.id }) }}">Show</a> </td>
                <td> <a href="{{ path('usercart_edit', { 'id': entity.id }) }}">Edit</a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {% endblock %}
