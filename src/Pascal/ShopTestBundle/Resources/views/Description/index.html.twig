{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Description list</h1>

    <ul>
        <li>
            <a href="{{ path('description_new') }}"> <strong>
                Create a new entry </strong>
            </a>
        </li>
        {% if is_granted("ROLE_ADMIN") %}
            <li> <strong>
                    <a href = "{{ path('product_viewAdmin') }}">Admin View</a>
                </strong>
            </li>
        {% endif %}
    </ul>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('description_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.productDesciption }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('description_show', { 'id': entity.id }) }}">Show</a>
                    </li>
                    <li>
                        <p> -- </p>
                    </li>
                    <li>
                        <a href="{{ path('description_edit', { 'id': entity.id }) }}">Edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
