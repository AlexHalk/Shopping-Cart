{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
{# ------------------ MAKE THESE PAGES LOOK BETTER...SPACES INBETWEEN TEXT --------------------------- #}
                <th>Description</th>
                    {% for description in descriptions %}
                        <td> 
                            {{ description.productDesciption }} 
                        </td>
                    {% else %}
                        <td> 
                            <a href = "{{ path('description_new') }}"> Create a Description for this Product </a>
                        </td>
                    {% endfor %}
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
    {% if descriptions|length < 1 %}
        <strong> <p> You must create a description for this product before moving foward. </p> </strong>
    {% else %}
        <li>
            <a href="{{ path('product') }}">
                Product List
            </a>
        </li>
        <li>
            <a href = "{{ path('product_viewAdmin') }}">
                Admin View
            </a>
        </li>
        <li>
            <a href="{{ path('product_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    {% endif %}
</ul>
{% endblock %}
