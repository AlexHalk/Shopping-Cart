{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Category List</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.categoryName }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('category_show', { 'id': entity.id }) }}">Show</a>
                    </li>
                    <li>
                        <p> -- </p>
                    </li>
                    <li>
                        <a href="{{ path('category_edit', { 'id': entity.id }) }}">Edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

{% if is_granted("ROLE_ADMIN") %}
    <a href = "{{ path('product_viewAdmin') }}">Admin View</a>
{% endif %}
    {% endblock %}
